<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hpenvy15.shapeup.biking">

    <ImageView
        android:id="@+id/biking"
        android:layout_width="424dp"
        android:layout_height="264dp"
        android:layout_marginBottom="191dp"
        app:layout_constraintBottom_toTopOf="@+id/bikeinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/biking" />

    <EditText
        android:id="@+id/addset"
        android:layout_width="116dp"
        android:layout_height="44dp"
        android:layout_marginEnd="61dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="@string/sets"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/addrep"
        app:layout_constraintEnd_toStartOf="@+id/addrep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addrep" />

    <EditText
        android:id="@+id/addrep"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/reps"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addset"
        app:layout_constraintTop_toBottomOf="@+id/biking" />


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="104dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="16dp"
        android:onClick="onClick"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addset"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addrep" />

    <TextView
        android:id="@+id/bikeinfo"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:textSize="16sp"
        android:text="@string/biking_is_a_total_body_workout_one_can_burn_upto_400_calories_per_hour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biking" />
</android.support.constraint.ConstraintLayout>
